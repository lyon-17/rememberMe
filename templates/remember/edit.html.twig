    <div id="editBox" class="box col" 
        data-controller="box"
        >
        {{ form_start(editForm) }}
        <div id="edit_box" class="form-group">
        {{form_row(editForm.name)}}
        </div>
        <div class="form-group">
            {{ form_widget(editForm.list, {'attr': {
                'data-box-target': 'list',
                'data-index': "{{ editForm.list|length > 0 ? editForm.list|last.vars.name + 1 : 0 }}",
                'data-prototype' : "{{ form_widget(editForm.list.vars.prototype)|e('html_attr') }}",
                }}) }}
        </div>
        <div id="edit_buttons" class="form-group">
        <div>
            <button class="btn btn-secondary" type="button" data-action="click->box#addRecall"  data-collection-holder-class="recalls">Add a recall</button>
        </div>
        {{ form_rest(editForm) }}
        </div>
    </div>
