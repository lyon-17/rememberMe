{% extends 'base.html.twig' %}
{% block body %}
    <div id="base">
    <p>log:</p>
    {% if log is defined %}
    <p>{{log}}</p>
    {% endif %}
    <div id="appContent">
        <div id="recallsMenu">
            {{ form(form) }}
            {{ form(recallForm) }}
        </div>
        {% if boxes is defined %}
        <div id="boxes" class="container">
            <div class="row">
                {% for box in boxes %}
                    <div class="box col">
                        <div data-controller="box">
                            <p data-box-target="name" class="boxTitle">{{box.name}}</p>
                            <a href="/delBox/{{box.id}}"><i class="bi bi-dash-circle-fill" style="font-size: 2rem; color: cornflowerblue;"></i></a>
                            <a data-action="click->box#edit">change name</a>
                            <a href="/updBox/{{box.id}}"><i class="bi bi-file-check" style="font-size: 2rem; color: cornflowerblue;"></i></a>
                        </div>
                        <div class="recalls">
                            {% for recall in recalls %}
                                    {% if box == recall.targetBox %}
                                        <p>{{recall.name}}
                                        <a href="/delRec/{{recall.id}}"><i class="bi bi-clipboard-x" style="font-size: 2rem; color: cornflowerblue;"></i></a>
                                        </p>
                                    {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <p>No boxes added</p>
        {% endif %}
    </div>
    </div>
{% endblock %}