{% extends 'base.html.twig' %}
{% block body %}
{% if status is defined %}
    <h3>Status list</h3>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>name</th>
                <th>Priority</th>
                <th colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
    {% for state in status %}
        <tr>
            <td>{{state.name}}</td>
            <td>{{state.priority}}</td>
            <td><a href="/edState/{{state.id}}">edit</td>
            <td><a href="/delState/{{state.id}}">delete</td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
{% else %}
<p>No status found</p>
{% endif %}
{% endblock %}